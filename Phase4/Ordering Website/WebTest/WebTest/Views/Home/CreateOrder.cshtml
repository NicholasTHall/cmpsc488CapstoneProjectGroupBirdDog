@model WebTest.Models.AccountOrder

@{
    ViewData["Title"] = "CreateOrder";
}

<h2>CreateOrder</h2>

<h4>AccountOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="order_num" class="control-label"></label>
                <input asp-for="order_num" class="form-control" />
                <span asp-validation-for="order_num" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="acc_id" class="control-label"></label>
                <input asp-for="acc_id" class="form-control" />
                <span asp-validation-for="acc_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="complete" /> @Html.DisplayNameFor(model => model.complete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="urgency" class="control-label"></label>
                <input asp-for="urgency" class="form-control" />
                <span asp-validation-for="urgency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CreateOrder2">To products</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
